<h1>photos gallery of <%= @album.name %></h1>

<div class="row">
    <ul class="photos">
        <% 5.times do %>
           <li class="col-lg-2 col-md-2 col-sm-3 col-xs-4"><img class="img-responsive" src="https://rawgit.com/michaelsoriano/bootstrap-photo-gallery/master/images/photodune-174908-rocking-the-night-away-xs.jpg" /></li>
       <% end %>
       <li class="col-lg-2 col-md-2 col-sm-3 col-xs-4"><img class="img-responsive" src="http://www.hdwallpaperbackgrounds.org/hd-wallpapers-backgrounds/Forests--bridges--natural-scenery-hd-wallpaper-backgrounds-1680x1050.jpg"/></li>

       <li class="col-lg-2 col-md-2 col-sm-3 col-xs-4"><img class="img-responsive" src="http://freehdw.com/wallpapers/natural-scenery.jpg"/></li>
    </ul>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @photo, html: { multipart: true } do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.file_field :file %>
            <%= f.submit "Upload", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>

